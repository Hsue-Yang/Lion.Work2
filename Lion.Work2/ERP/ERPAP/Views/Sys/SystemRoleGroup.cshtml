                </td>
                <td nowrap="nowrap">
                    @Html.InputComboBox("QueryEDIFlowID", Model.QueryEDIFlowID, Model.GetDictionaryFormSelectItem(Model.EntitySysSystemEDIFlowList, true), isDisabled: false, TitleName: SysSystemRoleGroup.Label_EDIFlowID)

                </td>
