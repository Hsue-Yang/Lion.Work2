@{ Layout = "~/Views/_Popup.cshtml"; }
@using LionTech.Entity.B2P
@using LionTech.Utility
@using LionTech.Web.ERPHelper
@using Resources
@model B2PAP.Models.Sys.SystemEDIFlowErrorModel

@{
    string fullDateTimeNumber = Common.GetDateTimeString();
}

<script src="@Common.GetEnumDesc(EnumSystemID.B2PAP)/Scripts/Sys/SystemEDIFlowError.js?@(fullDateTimeNumber)" type="text/javascript"></script>

@using (Html.BeginFormSubmit("SystemEDIFlowErrorForm"))
{
    using (Html.BeginTabs(B2PAP.Models._BaseAPModel.EnumTabController.Sys.ToString(), Model.TabList))
    {
        <table class="tblvertical">
            <tr>
                <th style="width: 75px;">
                    @Html.FormLabel(SysSystemEDIFlowError.Label_EDIFilePath)
                </th>
                <td>
                    @Html.InputTextBox("EDIFilePathReadOnlyText", Model.EDIFilePath, ReadOnly: true, Size: 50)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.ButtonClient("CloseButton", Resource.Button_Close, className: "btn")
                </td>
            </tr>
        </table>

        <div style="margin: 10px">
            <pre>
                @if (string.IsNullOrWhiteSpace(Model.EDIFile) == false)
                {
                    @Model.EDIFile
                }
            </pre>
        </div>
    }
}